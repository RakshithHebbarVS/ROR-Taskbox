<div class="row">
	<div class = "col-md-7">
		<div class = "page-header">
			<h2>Listing Projects 
			<small>Total projects <%= @project.size %></small>
			<div class = "pull-right">
				<%= link_to "Add project" , new_project_path, class: "btn btn-primary" %>
				<%= link_to "Export" , projects_export_path(format: "xls"), class: "btn btn-info" %>
			</div>
			</h2>
		</div>
	


		<table class=" table table-striped">
			<thead>
				<th>#</th>
				<th>Name</th>
				<th>Client</th>
				<th>status</th>
				<th>Actions</th>
			</thead>
			<tbody>
				<% count =1 %>
				<% @project.each do |project|%>
				<tr>
				<td><%= count %></td>
				<td><%= project.name.capitalize%></td>
				<td><%= project.client.name.capitalize %></td> 
				<td><%= project.status %></td>
				<td><%= link_to "show" ,project_path(project) %></td>
				</tr>
				<%count +=1%>
				<%end%>
			</tbody>
		</table>
	</div>

<div class= "col-md-5">
		<div class = "page-header">
			<h2>Statistics</h2>
		</div>
		<% data = {} %>
		<% data["new"] = current_user.projects.where('status = ?',"new").size %>
		<% data["on-going"] = current_user.projects.where('status = ?',"on-going").size %>
		<% data["completed"] = current_user.projects.where('status=?','completed').size %>


		<%= pie_chart(data) %>

		<% time = [] %>
		<%
		@project.each_with_index do |project,i|
			array = []
			
			array.push(project.name)

			array.push(project.created_at)
			array.push(project.created_at + 365.days)

			
			time[i]=array
		end
		%>

		<%= timeline time %>
</div>
</div>


