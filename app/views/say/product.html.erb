<h1>LISTING PRODUCTS</h1>

<% product={"marker"=>10,"pencil"=>20,"scale"=>5,"sketchpen"=>15,"eraser"=>4}%>
<table border = "1" >
<thead>
  <tr>
	<th>Name</th>
	<th>Price</th>
  </tr>
</thead>

  <% total = 0 %> 

  
<tbody>
   <% product.each do |key,value| %>
<tr>
	<td><%= key %></td>
	<td><%= value %></td> 
</tr>

<% total += value %>
<% end %>
</tbody>

</table>

<h3>Total : <%= total%></h3>

<b>Total : <%= product.values.inject(:+)%></b>		






   